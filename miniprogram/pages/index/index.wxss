/**index.wxss**/

/* ===== 全局样式 ===== */
page {
  min-height: 100vh;
  font-family: 'PingFang SC', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

.container {
  background: linear-gradient(180deg, #667eea 0%, #764ba2 35%, #667eea 75%, #764ba2 100%);
  padding: 0 32rpx 80rpx;
  min-height: 100vh;
  /* background: transparent; */
}

/* ===== 顶部区域 ===== */
.header {
  padding: 80rpx 0 0rpx;
  text-align: center;
  /* background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); */
  margin: 0 -32rpx 40rpx -32rpx;
  border-radius: 0 0 40rpx 40rpx;
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="75" cy="75" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="50" cy="10" r="0.5" fill="rgba(255,255,255,0.05)"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
  opacity: 0.3;
}

.title {
  font-weight: 700;
  color: #ffffff;
  font-size: 48rpx;
  margin-bottom: 16rpx;
  letter-spacing: -0.5rpx;
  position: relative;
  z-index: 1;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 50rpx;
  line-height: 1.6;
  font-weight: 400;
  position: relative;
  z-index: 1;
}

.user-info {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  padding: 32rpx;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  z-index: 1;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.user-info:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.avatar {
  position: relative;
  margin-right: 24rpx;
}

.avatar-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.4);
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.avatar-img:hover {
  transform: scale(1.05);
}

.level-badge {
  position: absolute;
  bottom: -6rpx;
  right: -6rpx;
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  color: #ffffff;
  font-size: 18rpx;
  padding: 6rpx 10rpx;
  border-radius: 16rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
  border: 2rpx solid #ffffff;
}

.user-stats {
  flex: 1;
  text-align: left;
}

.username {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  letter-spacing: -0.3rpx;
}

.score-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.score, .streak {
  color: rgba(255, 255, 255, 0.85);
  font-size: 24rpx;
  font-weight: 500;
}

/* ===== 快速开始区域 ===== */
.quick-start {
  margin: 50rpx 0;
}

.start-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.25);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.start-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
  border-radius: 24rpx;
}

.start-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.3);
}

.btn-icon {
  font-size: 56rpx;
  margin-bottom: 20rpx;
  display: block;
  position: relative;
  z-index: 1;
}

.btn-text {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  letter-spacing: -0.3rpx;
  position: relative;
  z-index: 1;
}

.btn-desc {
  color: rgba(255, 255, 255, 0.85);
  font-size: 26rpx;
  font-weight: 400;
  position: relative;
  z-index: 1;
}

/* ===== 功能模块 ===== */
.modules {
  margin: 50rpx 0;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.module-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.module-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 4rpx;
  height: 100%;
  background: linear-gradient(135deg, #667eea, #764ba2);
  transform: scaleY(0);
  transition: transform 0.3s ease;
}

.module-card:hover::before {
  transform: scaleY(1);
}

.module-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.12);
}

.module-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  text-align: center;
  transition: transform 0.3s ease;
}

.module-card:hover .module-icon {
  transform: scale(1.1);
}

.module-content {
  flex: 1;
  width: 100%;
}

.module-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a202c;
  margin-bottom: 8rpx;
  letter-spacing: -0.3rpx;
}

.module-desc {
  font-size: 22rpx;
  color: #718096;
  margin-bottom: 12rpx;
  line-height: 1.4;
  font-weight: 400;
}

.module-progress {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  width: 100%;
}

.progress-bar {
  width: 100%;
  height: 6rpx;
  background: #e2e8f0;
  border-radius: 6rpx;
  overflow: hidden;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 6rpx;
  transition: width 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  z-index: 1;
}

.progress-text {
  font-size: 20rpx;
  color: #667eea;
  font-weight: 600;
  text-align: center;
}

.module-stats, .module-social {
  margin-top: 8rpx;
  text-align: center;
}

.stat-item, .social-count {
  background-color: #ffffff;
  font-size: 20rpx;
  color: #a0aec0;
  font-weight: 500;
}

.module-badges {
  display: flex;
  justify-content: center;
  gap: 6rpx;
  margin-top: 8rpx;
}

.badge {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  overflow: hidden;
  transition: transform 0.3s ease;
}

.badge:hover {
  transform: scale(1.1);
}

.badge-icon {
  width: 100%;
  height: 100%;
}

.module-arrow {
  font-size: 24rpx;
  color: #a0aec0;
  margin-top: 8rpx;
  transition: all 0.3s ease;
}

.module-card:hover .module-arrow {
  color: #667eea;
  transform: translateY(-2rpx);
}

/* ===== 今日推荐 ===== */
.daily-recommend {
  margin: 50rpx 0;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a202c;
  margin-bottom: 32rpx;
  text-align: center;
  position: relative;
  letter-spacing: -0.5rpx;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: -12rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 2rpx;
}

.recommend-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.recommend-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.recommend-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 2rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.recommend-item:hover::before {
  transform: scaleX(1);
}

.recommend-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.12);
}

.recommend-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 60rpx;
  text-align: center;
  transition: transform 0.3s ease;
}

.recommend-item:hover .recommend-icon {
  transform: scale(1.1);
}

.recommend-content {
  flex: 1;
}

.recommend-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a202c;
  margin-bottom: 8rpx;
  letter-spacing: -0.3rpx;
}

.recommend-desc {
  font-size: 24rpx;
  color: #718096;
  margin-bottom: 8rpx;
  line-height: 1.4;
  font-weight: 400;
}

.recommend-difficulty {
  font-size: 22rpx;
  color: #667eea;
  font-weight: 500;
  display: inline-block;
  padding: 4rpx 12rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 12rpx;
}

.recommend-score {
  font-size: 32rpx;
  font-weight: 700;
  color: #667eea;
  margin-left: 16rpx;
}

/* ===== 学习统计 ===== */
.learning-stats {
  margin: 50rpx 0 65rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.stat-item {
  border-radius: 20rpx;
  padding: 36rpx 28rpx;
  text-align: center;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.stat-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.stat-item:hover::before {
  opacity: 1;
}

.stat-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.12);
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #667eea;
  margin-bottom: 8rpx;
  position: relative;
  z-index: 1;
}

.stat-label {
  font-size: 24rpx;
  color: #718096;
  line-height: 1.4;
  font-weight: 500;
  position: relative;
  z-index: 1;
}

/* ===== 响应式设计 ===== */
@media (max-width: 750rpx) {
  .container {
    padding: 0 24rpx 40rpx;
  }
  
  .header {
    margin: 0 -24rpx 40rpx -24rpx;
  }
  
  .title {
    font-size: 44rpx;
  }
  
  .modules {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .module-card {
    padding: 20rpx;
    flex-direction: row;
    text-align: left;
  }
  
  .module-icon {
    margin-right: 16rpx;
    margin-bottom: 0;
    font-size: 40rpx;
  }
  
  .module-content {
    flex: 1;
  }
  
  .module-title {
    font-size: 26rpx;
  }
  
  .module-desc {
    font-size: 20rpx;
  }
  
  .module-progress {
    flex-direction: row;
    align-items: center;
    gap: 12rpx;
  }
  
  .progress-bar {
    flex: 1;
    height: 6rpx;
  }
  
  .progress-text {
    font-size: 18rpx;
    min-width: 40rpx;
    text-align: right;
  }
  
  .module-arrow {
    margin-top: 0;
    margin-left: 12rpx;
    font-size: 20rpx;
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
    gap: 20rpx;
  }
  
  .recommend-item {
    padding: 24rpx;
  }
}

/* ===== 动画优化 ===== */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.module-card,
.recommend-item,
.stat-item {
  animation: fadeInUp 0.6s ease-out;
}

.module-card:nth-child(1) { animation-delay: 0.1s; }
.module-card:nth-child(2) { animation-delay: 0.2s; }
.module-card:nth-child(3) { animation-delay: 0.3s; }
.module-card:nth-child(4) { animation-delay: 0.4s; }

/* ===== 无障碍优化 ===== */
@media (prefers-reduced-motion: reduce) {
  .module-card,
  .recommend-item,
  .stat-item,
  .start-btn,
  .user-info {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}

/* ===== 高对比度模式 ===== */
@media (prefers-contrast: high) {
  .module-card,
  .recommend-item,
  .stat-item {
    border: 2rpx solid #1a202c;
  }
  
  .progress-fill {
    background: #1a202c;
  }
}