/* 发音分析页面样式 */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.container {
  padding: 0 30rpx 60rpx;
  min-height: 100vh;
}

/* 顶部导航 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0 20rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  backdrop-filter: blur(10rpx);
}

.back-icon {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.title {
  color: white;
  font-size: 36rpx;
  font-weight: 600;
}

.placeholder {
  width: 60rpx;
}

/* 练习内容 */
.practice-text {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 32rpx;
  margin: 40rpx 0;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.text-title {
  font-size: 28rpx;
  color: rgba(44, 62, 80, 0.7);
  margin-bottom: 16rpx;
}

.text-content {
  font-size: 36rpx;
  color: #2c3e50;
  font-weight: 600;
  line-height: 1.6;
}

/* 总体评分 */
.overall-score {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 40rpx 0;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.score-circle {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20rpx;
  box-shadow: 0 12rpx 32rpx rgba(255, 107, 107, 0.3);
}

.score-number {
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 8rpx;
}

.score-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.score-level {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 12rpx;
}

.score-feedback {
  font-size: 26rpx;
  color: rgba(44, 62, 80, 0.8);
  line-height: 1.4;
}

/* 详细分析 */
.detailed-analysis {
  margin: 40rpx 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 24rpx;
  text-align: center;
}

.analysis-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.item-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
}

.item-score {
  font-size: 32rpx;
  font-weight: 700;
  color: #ff6b6b;
}

.item-bar {
  height: 12rpx;
  background: rgba(44, 62, 80, 0.1);
  border-radius: 6rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.bar-fill {
  height: 100%;
  background: linear-gradient(135deg, #4CAF50, #8BC34A);
  border-radius: 6rpx;
  transition: width 0.5s ease;
}

.item-details {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 12rpx;
  background: rgba(44, 62, 80, 0.05);
  border-radius: 8rpx;
}

.detail-word {
  font-size: 22rpx;
  color: #2c3e50;
  font-weight: 500;
}

.detail-status {
  font-size: 20rpx;
  padding: 2rpx 6rpx;
  border-radius: 4rpx;
  font-weight: 500;
}

.detail-status.correct {
  background: rgba(76, 175, 80, 0.2);
  color: #4CAF50;
}

.detail-status.wrong {
  background: rgba(244, 67, 54, 0.2);
  color: #f44336;
}

.detail-status.partial {
  background: rgba(255, 193, 7, 0.2);
  color: #ffc107;
}

.item-feedback {
  font-size: 24rpx;
  color: rgba(44, 62, 80, 0.8);
  line-height: 1.4;
}

/* 改进建议 */
.improvement-suggestions {
  margin: 40rpx 0;
}

.suggestions-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.suggestion-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: flex-start;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.suggestion-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  margin-top: 4rpx;
}

.suggestion-content {
  flex: 1;
}

.suggestion-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.suggestion-desc {
  font-size: 22rpx;
  color: rgba(44, 62, 80, 0.8);
  line-height: 1.4;
}

/* 练习建议 */
.practice-suggestions {
  margin: 40rpx 0;
}

.practice-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.practice-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.practice-item:active {
  transform: scale(0.98);
}

.practice-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  width: 60rpx;
  text-align: center;
}

.practice-content {
  flex: 1;
}

.practice-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 6rpx;
}

.practice-desc {
  font-size: 22rpx;
  color: rgba(44, 62, 80, 0.7);
  line-height: 1.3;
  margin-bottom: 6rpx;
}

.practice-difficulty {
  font-size: 20rpx;
  color: #4CAF50;
  font-weight: 500;
}

.practice-arrow {
  font-size: 24rpx;
  color: rgba(44, 62, 80, 0.4);
  margin-left: 16rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin: 40rpx 0;
}

.action-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 16rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.retry-btn {
  background: linear-gradient(135deg, #2196F3, #21CBF3);
  color: white;
}

.next-btn {
  background: linear-gradient(135deg, #4CAF50, #8BC34A);
  color: white;
}
