/* 奖励中心页面样式 */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.container {
  padding: 0 30rpx 60rpx;
  min-height: 100vh;
}

/* 顶部导航 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0 20rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  backdrop-filter: blur(10rpx);
}

.back-icon {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.title {
  color: white;
  font-size: 36rpx;
  font-weight: 600;
}

.placeholder {
  width: 60rpx;
}

/* 用户积分信息 */
.user-score {
  margin: 40rpx 0;
}

.score-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.score-icon {
  font-size: 64rpx;
  margin-right: 24rpx;
}

.score-info {
  flex: 1;
}

.score-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.score-label {
  font-size: 24rpx;
  color: rgba(44, 62, 80, 0.7);
}

.level-info {
  text-align: right;
}

.level-text {
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.level-progress {
  width: 120rpx;
}

.progress-bar {
  height: 8rpx;
  background: rgba(44, 62, 80, 0.1);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 成就系统 */
.achievements {
  margin: 40rpx 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 24rpx;
  text-align: center;
}

.achievement-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.achievement-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.achievement-item:active {
  transform: scale(0.98);
}

.achievement-item.unlocked {
  border: 2rpx solid #4CAF50;
}

.achievement-item.locked {
  opacity: 0.6;
}

.achievement-icon {
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(44, 62, 80, 0.05);
  border-radius: 50%;
}

.icon-img {
  width: 60rpx;
  height: 60rpx;
}

.lock-icon {
  font-size: 40rpx;
  color: rgba(44, 62, 80, 0.4);
}

.achievement-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.achievement-desc {
  font-size: 22rpx;
  color: rgba(44, 62, 80, 0.7);
  line-height: 1.3;
  margin-bottom: 8rpx;
}

.achievement-reward {
  font-size: 20rpx;
  color: #4CAF50;
  font-weight: 600;
}

/* 饰品商店 */
.shop {
  margin: 40rpx 0;
}

.shop-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  padding: 6rpx;
  margin-bottom: 24rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  transition: all 0.3s ease;
}

.tab-item.active {
  background: rgba(255, 255, 255, 0.9);
  color: #2c3e50;
  font-weight: 600;
}

.shop-content {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.item-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.shop-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: rgba(44, 62, 80, 0.05);
  border-radius: 12rpx;
  transition: all 0.3s ease;
  position: relative;
}

.shop-item:active {
  transform: scale(0.98);
}

.shop-item.owned {
  background: rgba(76, 175, 80, 0.1);
  border: 1rpx solid #4CAF50;
}

.item-preview {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
}

.preview-img {
  width: 100%;
  height: 100%;
}

.owned-badge {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  background: #4CAF50;
  color: white;
  font-size: 18rpx;
  padding: 2rpx 6rpx;
  border-radius: 6rpx;
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 6rpx;
}

.item-desc {
  font-size: 22rpx;
  color: rgba(44, 62, 80, 0.7);
  line-height: 1.3;
  margin-bottom: 8rpx;
}

.item-price {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.price-icon {
  font-size: 20rpx;
}

.price-number {
  font-size: 24rpx;
  color: #ff6b6b;
  font-weight: 600;
}

/* 积分获取方式 */
.score-ways {
  margin: 40rpx 0;
}

.ways-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.way-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.way-item:active {
  transform: scale(0.98);
}

.way-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 60rpx;
  text-align: center;
}

.way-content {
  flex: 1;
}

.way-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 6rpx;
}

.way-desc {
  font-size: 22rpx;
  color: rgba(44, 62, 80, 0.7);
  line-height: 1.3;
}

.way-reward {
  font-size: 24rpx;
  color: #4CAF50;
  font-weight: 600;
}
