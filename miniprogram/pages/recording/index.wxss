/* 录音评分页面样式 */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.container {
  padding: 0 30rpx 60rpx;
  min-height: 100vh;
}

/* 顶部导航 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0 20rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  backdrop-filter: blur(10rpx);
}

.back-icon {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.title {
  color: white;
  font-size: 36rpx;
  font-weight: 600;
}

.placeholder {
  width: 60rpx;
}

/* 练习内容 */
.practice-content {
  margin: 40rpx 0;
}

.text-display {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.text-title {
  font-size: 28rpx;
  color: rgba(44, 62, 80, 0.7);
  margin-bottom: 20rpx;
  text-align: center;
}

.text-content {
  font-size: 40rpx;
  color: #2c3e50;
  font-weight: 600;
  line-height: 1.6;
  text-align: center;
  margin-bottom: 20rpx;
}

.text-translation {
  font-size: 26rpx;
  color: rgba(44, 62, 80, 0.6);
  text-align: center;
  line-height: 1.4;
}

/* 录音区域 */
.recording-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 60rpx 0;
}

.recording-circle {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: 0 12rpx 32rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s ease;
}

.recording-circle:active {
  transform: scale(0.95);
}

.recording-circle.recording {
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

.circle-inner {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mic-icon {
  font-size: 64rpx;
}

.recording-waves {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  gap: 8rpx;
}

.wave {
  width: 6rpx;
  height: 40rpx;
  background: white;
  border-radius: 3rpx;
  animation: wave 1s infinite;
}

.wave:nth-child(2) {
  animation-delay: 0.2s;
}

.wave:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes wave {
  0%, 100% { height: 20rpx; }
  50% { height: 60rpx; }
}

.recording-text {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  margin: 30rpx 0 10rpx;
}

.recording-tip {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

/* 录音控制 */
.recording-controls {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.control-btn {
  flex: 1;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s ease;
}

.control-btn:active {
  transform: scale(0.95);
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 24rpx;
  color: #2c3e50;
  font-weight: 500;
}

/* 评分结果 */
.score-result {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 40rpx 0;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.score-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.score-title {
  font-size: 32rpx;
  color: #2c3e50;
  margin-bottom: 16rpx;
}

.score-number {
  font-size: 80rpx;
  font-weight: 700;
  color: #ff6b6b;
  margin-bottom: 8rpx;
}

.score-level {
  font-size: 28rpx;
  color: rgba(44, 62, 80, 0.7);
}

.score-details {
  margin-bottom: 40rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.detail-label {
  width: 140rpx;
  font-size: 26rpx;
  color: #2c3e50;
}

.detail-bar {
  flex: 1;
  height: 12rpx;
  background: rgba(44, 62, 80, 0.1);
  border-radius: 6rpx;
  margin: 0 16rpx;
  overflow: hidden;
}

.detail-fill {
  height: 100%;
  background: linear-gradient(135deg, #4CAF50, #8BC34A);
  border-radius: 6rpx;
  transition: width 0.5s ease;
}

.detail-value {
  width: 60rpx;
  font-size: 24rpx;
  color: #4CAF50;
  font-weight: 600;
  text-align: right;
}

.score-feedback {
  background: rgba(44, 62, 80, 0.05);
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 40rpx;
}

.feedback-title {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.feedback-content {
  font-size: 26rpx;
  color: rgba(44, 62, 80, 0.8);
  line-height: 1.5;
}

.score-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 16rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.continue-btn {
  background: linear-gradient(135deg, #4CAF50, #8BC34A);
}

.analysis-btn {
  background: linear-gradient(135deg, #2196F3, #21CBF3);
}

.action-btn:active {
  transform: scale(0.95);
}

.action-btn .btn-text {
  color: white;
  font-size: 28rpx;
  font-weight: 600;
}

/* 练习进度 */
.practice-progress {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  padding: 20rpx 30rpx;
  backdrop-filter: blur(10rpx);
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.progress-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #2c3e50;
}

.progress-count {
  font-size: 24rpx;
  color: #ff6b6b;
  font-weight: 600;
}

.progress-bar {
  height: 8rpx;
  background: rgba(44, 62, 80, 0.1);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}
